
import java.util.Random;

public class Gracz {
    private String name;
    private int zycko;
    private int exp;
    private int damage;

    public Gracz() {
        this.name = "player1";
        this.zycko = 100;
        this.exp = 0;
        this.damage = 1;
    }

    public void statystyki() {
        System.out.println("Players name: " + name);
        System.out.println("Live: " + zycko);
        System.out.println("Exp: " + exp);
        System.out.println("Damage: " + damage);

    }

    public int walka() {
        Random random = new Random();
        this.zycko -= random.nextInt(80);
        this.exp+=10;
        return this.zycko;
    }

    public int leczenie() {
        this.zycko += 10;
        return this.zycko;
    }
