
import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
    Scanner scanner = new Scanner(System.in);

    Gracz player1 = new Gracz();


       while (true){
           System.out.println("1. wyjscie");
           System.out.println("2. walka");
           System.out.println("3. wyswietl statystyki");
           System.out.println("4. leczenie");
           int playerChoice = scanner.nextInt();
           if (playerChoice == 1){
               System.out.println("Saonara leszczu");
               break;
           }
           if (playerChoice == 2){
               if(player1.walka()<=0){
                   System.out.println("nie zyjesz");
                   break;
               }
           }
           if (playerChoice == 3){
               player1.statystyki();
           }
           if (playerChoice == 4){
               player1.leczenie();
           }
           }
       }
    }
